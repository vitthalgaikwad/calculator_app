<div class="row">
  <h1>Calculator</h1>
</div>
<div class="row">
  <%= form_tag home_calculate_path, remote: true, html: { class: 'form-horizontal' } do %>
    <div class="form-actions fluid">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label col-md-3">Enter Expression
            <span class="required" aria-required="true">* </span>
          </label>
          <div class="col-md-9">
            <%= text_field_tag :expression, nil, class: "form-control" %>
          </div>
        </div>
      </div>
        <div class="col-md-6">
          <div class="col-md-offset-3 col-md-9">
            <%= submit_tag "Calculate", class: "btn btn-primary" %>
          </div>
        </div>
        <div class="col-md-6">
          <label class="control-label col-md-3">Answer
          </label>
          <div class="col-md-9" id="answer">
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>